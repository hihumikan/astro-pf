<style>
    body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:#fff;
    z-index: 9999;
    pointer-events: none;
    opacity: 0;
    -webkit-transition: opacity .8s ease;
    transition: opacity .8s ease;
  }
  body.fade::after {
    opacity: 1;
  }
  </style>
  
  <script>
  window.addEventListener('load', function() {
    document.body.classList.remove('fade');
  });
  </script>
